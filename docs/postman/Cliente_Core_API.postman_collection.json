  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8081/api/clientes",
      "type": "string"
    },
    {
      "key": "cognito_domain",
      "value": "your-cognito-domain.auth.sa-east-1.amazoncognito.com",
      "type": "string"
    },
    {
      "key": "client_id",
      "value": "YOUR_CLIENT_ID",
      "type": "string"
    },
