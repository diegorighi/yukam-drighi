{
  "info": {
    "name": "Cliente Core API - OAuth2",
    "description": "Collection completa para testar o cliente-core com autenticação OAuth2 Client Credentials",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "oauth2",
    "oauth2": [
      {
        "key": "tokenName",
        "value": "Cognito Client Credentials",
        "type": "string"
      },
      {
        "key": "grant_type",
        "value": "client_credentials",
        "type": "string"
      },
      {
        "key": "accessTokenUrl",
        "value": "https://{{cognito_domain}}/oauth2/token",
        "type": "string"
      },
      {
        "key": "clientId",
        "value": "{{client_id}}",
        "type": "string"
      },
      {
        "key": "clientSecret",
        "value": "{{client_secret}}",
        "type": "string"
      },
      {
        "key": "scope",
        "value": "cliente-core/read cliente-core/write",
        "type": "string"
      },
      {
        "key": "addTokenTo",
        "value": "header",
        "type": "string"
      },
      {
        "key": "client_authentication",
        "value": "header",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "auth": {
          "type": "noauth"
        },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/actuator/health",
          "host": ["{{base_url}}"],
          "path": ["actuator", "health"]
        },
        "description": "Verifica se o serviço está rodando (não precisa de autenticação)"
      }
    },
    {
      "name": "Cliente PF",
      "item": [
        {
          "name": "1. Criar Cliente PF",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('last_created_pf_id', response.publicId);",
                  "    pm.environment.set('last_created_cpf', response.cpf);",
                  "    console.log('Cliente PF criado:', response.publicId);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"primeiroNome\": \"João\",\n  \"nomeDoMeio\": \"da\",\n  \"sobrenome\": \"Silva\",\n  \"cpf\": \"12345678910\",\n  \"rg\": \"MG-12.345.678\",\n  \"dataNascimento\": \"1990-01-15\",\n  \"sexo\": \"MASCULINO\",\n  \"email\": \"joao.silva@email.com\",\n  \"nomeMae\": \"Maria da Silva\",\n  \"nomePai\": \"José da Silva\",\n  \"estadoCivil\": \"Casado\",\n  \"profissao\": \"Engenheiro\",\n  \"nacionalidade\": \"Brasileira\",\n  \"naturalidade\": \"Belo Horizonte\",\n  \"tipoCliente\": \"COMPRADOR\",\n  \"observacoes\": \"Cliente teste criado via Postman\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/clientes/pf",
              "host": ["{{base_url}}"],
              "path": ["v1", "clientes", "pf"]
            },
            "description": "Cria um novo cliente Pessoa Física"
          },
          "response": []
        },
        {
          "name": "2. Buscar Cliente PF por ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/v1/clientes/pf/{{last_created_pf_id}}",
              "host": ["{{base_url}}"],
              "path": ["v1", "clientes", "pf", "{{last_created_pf_id}}"]
            },
            "description": "Busca um cliente PF pelo Public ID (UUID)"
          },
          "response": []
        },
        {
          "name": "3. Buscar Cliente PF por CPF",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/v1/clientes/pf/cpf/12345678910",
              "host": ["{{base_url}}"],
              "path": ["v1", "clientes", "pf", "cpf", "12345678910"]
            },
            "description": "Busca um cliente PF pelo CPF (apenas números)"
          },
          "response": []
        },
        {
          "name": "4. Listar Clientes PF (Paginado)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/v1/clientes/pf?page=0&size=10&sort=dataCriacao,desc",
              "host": ["{{base_url}}"],
              "path": ["v1", "clientes", "pf"],
              "query": [
                {
                  "key": "page",
                  "value": "0",
                  "description": "Número da página (inicia em 0)"
                },
                {
                  "key": "size",
                  "value": "10",
                  "description": "Tamanho da página"
                },
                {
                  "key": "sort",
                  "value": "dataCriacao,desc",
                  "description": "Ordenação (campo,direção)"
                }
              ]
            },
            "description": "Lista clientes PF com paginação e ordenação"
          },
          "response": []
        },
        {
          "name": "5. Atualizar Cliente PF",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"publicId\": \"{{last_created_pf_id}}\",\n  \"profissao\": \"Médico\",\n  \"estadoCivil\": \"Divorciado\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/clientes/pf/{{last_created_pf_id}}",
              "host": ["{{base_url}}"],
              "path": ["v1", "clientes", "pf", "{{last_created_pf_id}}"]
            },
            "description": "Atualiza campos específicos do cliente (selective update)"
          },
          "response": []
        },
        {
          "name": "6. Deletar Cliente PF (Soft Delete)",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/v1/clientes/pf/{{last_created_pf_id}}?motivoDelecao=Cliente solicitou&usuarioDelecao=admin@yukam.com",
              "host": ["{{base_url}}"],
              "path": ["v1", "clientes", "pf", "{{last_created_pf_id}}"],
              "query": [
                {
                  "key": "motivoDelecao",
                  "value": "Cliente solicitou",
                  "description": "Motivo da exclusão"
                },
                {
                  "key": "usuarioDelecao",
                  "value": "admin@yukam.com",
                  "description": "Usuário que está deletando"
                }
              ]
            },
            "description": "Soft delete do cliente (marca como inativo)"
          },
          "response": []
        },
        {
          "name": "7. Restaurar Cliente PF",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/v1/clientes/{{last_created_pf_id}}/restaurar?usuarioRestauracao=admin@yukam.com",
              "host": ["{{base_url}}"],
              "path": ["v1", "clientes", "{{last_created_pf_id}}", "restaurar"],
              "query": [
                {
                  "key": "usuarioRestauracao",
                  "value": "admin@yukam.com",
                  "description": "Usuário que está restaurando"
                }
              ]
            },
            "description": "Restaura um cliente deletado (soft delete)"
          },
          "response": []
        }
      ]
    },
